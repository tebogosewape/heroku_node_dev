<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header.ejs %>
</head>

<body>
    <% include ../partials/nav.ejs %>

    <div class="container">
        <div class="alert alert-info text-center" role="alert">
            Send notification
        </div>
        <hr>
        <div class="row">

            <div class="col-md-6">

                <h3>Stored Devices</h3>

                <ul>
                <% tokens.forEach(function(v ) { %>
                    <li style="white-space: normal;float: left; width: 100%;height: auto;word-wrap: break-word; border: 1px solid #ccc; padding: 5px;"><%=v.device_token%></li>
                <% }); %>
                </ul>

            </div>

            <div class="col-md-6">
                <form action="/send/notification" method="POST" class="form-horizontal" role="form">
                        <div class="form-group">
                            <legend>Send notification</legend>
                        </div>
                
                        <div class="form-group">
                            <label for="message" class="col-md-4">Message</label>
                            <input type="text" name="message" id="message" class="form-control col-md-8">
                        </div>
                
                        <div class="form-group">
                            <label for="device_token" class="col-md-4">Device Token</label>
                            <input type="text" name="device_token" id="device_token" class="form-control col-md-8">
                        </div>
                
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-2">
                                <button type="submit" class="btn btn-success">Send</button>
                            </div>
                        </div>
                </form>
            </div>

        </div>

    </div>
</body>

</html>