<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header.ejs %>
</head>

<body>
    <% include ../partials/nav.ejs %>

    <div class="container">
        <div class="alert alert-info text-center" role="alert">
            Add new device
        </div>
        <hr>
        <div class="row">

            <div class="col-md-6 col-md-offset-3">
                <form action="/store/device" method="POST" class="form-horizontal" role="form">
                        <div class="form-group">
                            <legend>New Device</legend>
                        </div>
                
                        <div class="form-group">
                            <label for="username" class="col-md-4">Username</label>
                            <input type="text" name="username" id="username" class="form-control col-md-8">
                        </div>
                
                        <div class="form-group">
                            <label for="device_token" class="col-md-4">Device Token</label>
                            <input type="text" name="device_token" id="device_token" class="form-control col-md-8">
                        </div>
                
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-2">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </div>
                </form>
            </div>

        </div>

    </div>
</body>

</html>